<div class="page-header">
  <%= link_to new_ticket_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Ticket
  <% end %>
  <h1>Tickets</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Due date</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tickets) do |ticket| %>
            <td><%= link_to ticket.title, ticket %></td>
            <td><%= ticket.category %></td>
            <td><%= ticket.due_date %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Archive', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
